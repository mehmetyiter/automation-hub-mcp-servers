# Application Configuration
NODE_ENV=development
API_PORT=3008
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=usage_analytics
DB_USERNAME=postgres
DB_PASSWORD=password
DB_SSL=false
DB_MAX_CONNECTIONS=30

# Usage Tracking Configuration
ENABLE_REALTIME_PROCESSING=true
ENABLE_GEOLOCATION=true
ENABLE_USER_AGENT_PARSING=true
BUFFER_SIZE=1000
FLUSH_INTERVAL=30000
SESSION_TIMEOUT=1800000
ENABLE_CONVERSION_TRACKING=true
ENABLE_COHORT_ANALYSIS=true

# Reporting Configuration
REPORTS_DIRECTORY=./reports
MAX_REPORT_AGE=30
ENABLE_SCHEDULED_REPORTS=true
CHART_WIDTH=800
CHART_HEIGHT=600

# API Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=1000
ENABLE_WEBSOCKET=true
ENABLE_REALTIME_ANALYTICS=true

# Analytics Features
ENABLE_FUNNEL_ANALYSIS=true
ENABLE_COHORT_ANALYSIS=true
ENABLE_USER_SEGMENTATION=true
ENABLE_A_B_TESTING=true
ENABLE_CUSTOM_EVENTS=true

# External Integrations
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXXX-X
GA_API_SECRET=your-ga-api-secret

# Mixpanel
MIXPANEL_TOKEN=your-mixpanel-token

# Amplitude
AMPLITUDE_API_KEY=your-amplitude-api-key

# Segment
SEGMENT_WRITE_KEY=your-segment-write-key

# PostHog
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Data Export
ENABLE_DATA_EXPORT=true
EXPORT_FORMATS=csv,json,excel,parquet
EXPORT_RETENTION_DAYS=90

# Privacy and Compliance
ENABLE_GDPR_COMPLIANCE=true
ENABLE_CCPA_COMPLIANCE=true
DATA_ANONYMIZATION=true
IP_ANONYMIZATION=true
COOKIE_CONSENT_REQUIRED=true

# Performance Configuration
ENABLE_SAMPLING=false
SAMPLING_RATE=0.1
ENABLE_COMPRESSION=true
ENABLE_CACHING=true
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info