{
  "name": "Automation Hub MCP",
  "short_name": "AutoHub",
  "description": "AI-powered automation platform for managing workflows across multiple services",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#2196f3",
  "orientation": "portrait-primary",
