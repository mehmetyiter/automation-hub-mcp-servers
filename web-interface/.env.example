# AI Provider Configuration
# Choose your AI provider: 'openai', 'anthropic', or 'gemini'
REACT_APP_AI_PROVIDER=anthropic

# API Keys (required if not using user settings)
# Get your API key from:
# - OpenAI: https://platform.openai.com/api-keys
# - Anthropic: https://console.anthropic.com/
# - Google AI: https://makersuite.google.com/app/apikey
REACT_APP_AI_API_KEY=your_api_key_here

# Database Configuration (optional - uses localStorage as fallback)
REACT_APP_DATABASE_URL=postgresql://user:password@localhost:5432/automation_hub

# API Gateway URL
REACT_APP_API_BASE_URL=http://localhost:8080/api

# Feature Flags
REACT_APP_ENABLE_AI_LEARNING=true
REACT_APP_ENABLE_PATTERN_RECOGNITION=true
REACT_APP_ENABLE_PERFORMANCE_OPTIMIZATION=true

# Cache Settings
REACT_APP_CACHE_TIMEOUT=300000 # 5 minutes in milliseconds

# Performance Thresholds
REACT_APP_MAX_RESPONSE_TIME=5000 # 5 seconds
REACT_APP_MAX_NODE_COUNT=50
REACT_APP_MAX_COMPLEXITY=0.8
REACT_APP_MIN_SUCCESS_RATE=0.9

# Logging
REACT_APP_LOG_LEVEL=info # debug, info, warn, error